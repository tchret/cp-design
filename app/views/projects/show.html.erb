<% unless Project.all.size < 3 %>

  <div class='nav-project'>
    <div class='title'><%= @project.title %></div>
    <% if Project.exists?(@project.id - 1 ) %>
    <div class='prev'><%= link_to project_path((@project.id - 1) )do %><i class="fa fa-angle-left"> <% end %></i></div>
    <% end %>
    <% if Project.exists?(@project.id + 1 ) %>
      <div class='next'><%= link_to project_path((@project.id + 1) )do %><i class="fa fa-angle-right"> <% end %></i></div>
    <% end %>
    <div class='menu'><i class="fa fa-bars"></i> </div>
    <ul class='menu-index'>
      <% @projects.each do |project| %>
        <% unless project.id == params[:id].to_i %>
          <%= link_to project_path(project) do %><li><%= project.title %></li><% end %>
        <% end %>
      <% end %>
    </ul>

  </div>

<% end %>
<div class='container'>
  <div class='banner' style='background: url(<%= @project.banner %>)'>
  </div>
  <div class='infos'><div class='country'><%=@project.country %></div><div class='description'><%= @project.description %></div></div>
  <div class='content-top-slideshow content'>
    <h1>
      <%= @project.title %>
    </h1>
    <p> <%= @project.pre_slideshow_content.html_safe %></p>
    <div class='slideshow_pictures'>
      <div id="owl-demo" class="owl-carousel owl-theme">

      <% @project.slideshow_pictures.each do |slide| %>
          <div class="item">
            <img src="<%= slide.picture %>"/>
          </div>
      <% end %>
      </div>
    </div>

  <p class='content content-bottom'> <%= @project.post_slideshow_content.html_safe %></p>
  <div class='images_bottom'>
  <% if @project.bottom_pictures.size == 1 %>
    <% @project.bottom_pictures.each do  |image|%>
      <div class="col-xs-12" style='background:url(<%=  image.picture %>)'>
      </div>
    <% end %>
  <% elsif  @project.bottom_pictures.size == 2  %>
    <% @project.bottom_pictures.each do  |image|%>
      <div class="col-xs-6" style='background:url(<%= image.picture %>)'>
      </div>
    <% end %>
  <% elsif @project.bottom_pictures.size == 3 %>

  <% @project.bottom_pictures.each do  |image|%>
    <div class="col-xs-4" style='background:url(<%= image.picture %>)'>
    </div>
  <% end  %>

  <% elsif @project.bottom_pictures.size == 4 %>
    <% @project.bottom_pictures.each do  |image|%>
      <div class="col-xs-3" style='background:url(<%= image.picture %>)'>
      </div>
    <% end %>
  <% end %>

  </div>
  </div>
</div>

